{
  "typescript": {
    "enabled": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "formatting": {
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "linting": {
    "eslint": {
      "enabled": true,
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "warn",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-explicit-any": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  },
  "tailwind": {
    "enabled": true,
    "configPath": "./tailwind.config.js",
    "cssPath": "./styles/globals.css"
  },
  "nextjs": {
    "enabled": true,
    "strictMode": true,
    "experimentalTurbopack": true
  },
  "folders": {
    "app": "src/app",
    "components": "src/components",
    "styles": "src/styles",
    "utils": "src/utils",
    "types": "src/types",
    "hooks": "src/hooks",
    "constants": "src/constants",
    "services": "src/services",
    "tests": "__tests__"
  },
  "git": {
    "enabled": true,
    "conventionalCommits": true,
    "branchNaming": {
      "prefix": ["feature", "bugfix", "hotfix", "release"],
      "separator": "/"
    }
  }
} 